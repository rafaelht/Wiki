# Variables de entorno para desarrollo local
# Copia este archivo a .env y configura los valores apropiados

# Base de datos MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=wikipedia_graph_explorer

# Configuración del servidor
HOST=0.0.0.0
PORT=8001
DEBUG=True

# Configuración de logging
LOG_LEVEL=INFO

# Configuración de la aplicación
MAX_GRAPH_NODES=200
MAX_GRAPH_DEPTH=3
REQUEST_TIMEOUT=30

# Configuración de Wikipedia API
WIKIPEDIA_USER_AGENT=Wikipedia-Graph-Explorer/1.0 (Educational Purpose)
WIKIPEDIA_TIMEOUT=30
