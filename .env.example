# Configuración para Wikipedia Graph Explorer
# Copia este archivo como .env para personalizar la configuración

# Puertos de la aplicación
BACKEND_PORT=8001
FRONTEND_PORT=3000

# URLs de conexión
BACKEND_URL=http://127.0.0.1:8001
FRONTEND_URL=http://localhost:3000

# Base de datos MongoDB
MONGODB_URL=mongodb://localhost:27017/wikipedia_explorer
MONGODB_DATABASE=wikipedia_explorer

# Configuración de logging
LOG_LEVEL=INFO
DEBUG=false

# Configuración de la aplicación
MAX_GRAPH_NODES=200
MAX_GRAPH_DEPTH=3
REQUEST_TIMEOUT=30

# Configuración de Wikipedia API
WIKIPEDIA_USER_AGENT="Wikipedia-Graph-Explorer/1.0 (Educational Purpose)"
WIKIPEDIA_TIMEOUT=30

# Configuración de desarrollo
HOT_RELOAD=true
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Docker configuration
COMPOSE_PROJECT_NAME=wikipedia-graph-explorer
